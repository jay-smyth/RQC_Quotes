<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="newjob.newTaskFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        android:alpha="0.5"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:background="@color/black">
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:elevation="2dp"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/titleText"
                android:text="@string/add_task_name"/>
            <View
                android:background="@color/black"
                style="@style/underView"/>
            <EditText
                android:id="@+id/newTaskEditText"
                style="@style/editTextBox"
                android:inputType="text"/>

            <TextView
                style="@style/titleText"
                android:text="@string/add_task_cost"/>
            <View
                android:background="@color/black"
                style="@style/underView"
                android:layout_marginBottom="15dp"/>
            <EditText
                android:id="@+id/newTaskPriceEditText"
                style="@style/editTextBox"
                android:inputType="numberDecimal"/>

            <TextView
                style="@style/titleText"
                android:text="@string/assign_trade"/>
            <View
                android:background="@color/black"
                style="@style/underView"
                android:layout_marginBottom="15dp"/>
            <ListView
                android:id="@+id/tradeListview"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/bg_key"
                android:choiceMode="singleChoice"
                android:listSelector="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <Button
                    android:id="@+id/cancelBtn"
                    style="@style/MyBtn"
                    android:text="@string/cancel"
                    android:layout_weight="1"
                    app:backgroundTint="@null"/>
                <Button
                    android:id="@+id/saveBtn"
                    style="@style/MyBtn"
                    android:text="@string/save"
                    android:layout_weight="1"
                    app:backgroundTint="@null"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>