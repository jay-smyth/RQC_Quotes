<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="newjob.NewJobStart">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:text="@string/title_to_quote"
                style="@style/textBox"/>

            <EditText
                android:id="@+id/jobTitle"
                android:inputType="text"
                style="@style/editTextBox"/>

            <Button
                android:id="@+id/addRoom"
                style="@style/MyBtn"
                android:text="@string/add_room"
                app:backgroundTint="@null"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/roomList"
                style="@style/sunkList"/>
            <!--grouped buttons-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <Button
                    style="@style/MyBtn"
                    android:id="@+id/canJobBtn"
                    android:text="@string/addTaskBtn"
                    android:layout_weight="1"
                    app:backgroundTint="@null"/>
                <Button
                    style="@style/MyBtn"
                    android:id="@+id/saveJobBtn"
                    android:text="@string/addTaskByTradeBtn"
                    android:layout_weight="1"
                    app:backgroundTint="@null"/>
            </LinearLayout>
            <!--grouped buttons-->
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>