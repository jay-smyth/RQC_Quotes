<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/cardview_light_background"
    android:id="@+id/parentFrag"
    tools:context="newjob.tasksByTrade">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
    <TextView
        style="@style/titleText"
        android:text=""
        android:id="@+id/fragTest"/>

    <View
        android:background="@color/black"
        style="@style/underView"/>

    <TextView
        style="@style/titleText"
        android:text="@string/task_title_text"
        android:id="@+id/fragSubTitle"/>
    <Button
        android:id="@+id/testBtn"
        style="@style/MyBtn"
        android:text="@string/addTaskBtn"
        app:backgroundTint="@null"/>
    <ListView
        android:id="@+id/tradeTaskListview"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="20dp"/>

            </LinearLayout>
        </ScrollView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/newTaskFragFrame"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editPriceFrag"/>
    </RelativeLayout>
</LinearLayout>